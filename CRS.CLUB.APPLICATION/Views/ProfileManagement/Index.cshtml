@model CRS.CLUB.APPLICATION.Models.UserProfileManagement.UserProfileModel
@{
    ViewBag.Title = "Profile Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="http://cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.js"></script>
<link href="http://cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.css" rel="stylesheet" />
<style>

    input {
        padding: 5px 0;
        font-size: 1.5em;
        font-family: sans-serif;
        width: 100px;
    }

    ._jw-tpk-header {
        background-color: #d75a8b;
    }

    ._jw-tpk-hour {
        font-size: 16px;
        font-weight: 400;
    }

    ._jw-tpk-minute {
        font-size: 16px;
        font-weight: 400;
    }
    input.w-full.disabled_class {
        background: lightgray;
    }
    
</style>
@using (Html.BeginForm("Index", "ProfileManagement", FormMethod.Post, new { @id = "ManageProfileForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.PhoneNumber)
    @Html.HiddenFor(model => model.EmailAddress)
    @Html.HiddenFor(model => model.ProfilePicture)
    @Html.HiddenFor(model => model.CoverPicture)
    <div class="px-8 py-4 grid gap-8">
        <div class="grid gap-1">
            <div class="text-[20px] text-[#101828] font-semibold">@CRS.CLUB.APPLICATION.Resources.Resource.Edit_Profile</div>
            <div class="text-sm text-[#667085]">@CRS.CLUB.APPLICATION.Resources.Resource.Manage_your_profile_informations</div>
        </div>
        <div class="flex gap-2">
            <div class="flex items-center gap-2 profile-steps active" id="step1">
                <div class="steps-number">
                    1
                </div>
                <div class="steps-text">
                    @CRS.CLUB.APPLICATION.Resources.Resource.Basic_Information
                </div>
                <hr class="setp-divider" />
            </div>
            <div class="flex items-center gap-2 profile-steps" id="step2">
                <div class="steps-number">
                    2
                </div>
                <div class="steps-text">
                    @CRS.CLUB.APPLICATION.Resources.Resource.Social_Links
                </div>
                <hr class="setp-divider" />
            </div>
            <div class="flex items-center gap-2 profile-steps" id="step3">
                <div class="steps-number">
                    3
                </div>
                <div class="steps-text">
                    @CRS.CLUB.APPLICATION.Resources.Resource.User_Info
                </div>
                <hr class="setp-divider" />
            </div>
            <div class="flex items-center gap-2 profile-steps" id="step4">
                <div class="steps-number">
                    4
                </div>
                <div class="steps-text">
                    @CRS.CLUB.APPLICATION.Resources.Resource.Club_Info
                </div>
                <hr class="setp-divider" />
            </div>
        </div>
        <form id="profileForm" action="/ProfileManagement/Index" method="POST" enctype="multipart/form-data">
            <div id="content1" class="content-section" style="display: block;">
                <div class="grid gap-6">
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Basic_Details
                    </div>
                    <!-- image  -->
                    <div class="flex gap-8">
                        <div class="w-[272px] overflow-hidden">
                            <label for="profile" class="block text-sm font-medium mb-3   text-[#333]">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Profile_Picture
                            </label>
                            <div>
                                <img class="w-[272px] h-[150px] object-cover overflow-hidden border border-[#E6E6E6] rounded-[4px]"
                                     id="uploaded_image" src="@Model.ProfilePicture" alt="profile">
                            </div>
                            <div class="mt-2">
                                <div class="file-upload-common bg-[#F5F5F5] border-none p-2 ">
                                    <label for="file_input" class="bg-[#CC527A] w-[123px] flex-none custom-file-upload h-[26px] text-ellipsis-customer ">
                                        <span>@CRS.CLUB.APPLICATION.Resources.Resource.Choose_Logo</span>
                                    </label>
                                    <input id="file_input" name="profilePicture" type="file" style="display:none;">
                                    <p class="pl-2 text-ellipsis-customer" id="file_name_display"></p>
                                </div>
                                <div class="text-xs text-error mt-[8px]">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.ImageNote
                                </div>
                            </div>
                        </div>
                        <!-- cover pic  -->
                        <div class="w-[481px] overflow-hidden">
                            <label for="cover " class="block text-sm font-medium mb-3 text-[#333] ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Cover_Picture
                            </label>
                            <div>
                                <img class="w-[481px] h-[150px] object-cover overflow-hidden border border-[#E6E6E6] rounded-[4px]"
                                     id="uploaded_image_cover" src="@Model.CoverPicture" alt="profile">
                            </div>
                            <div class="mt-2">
                                <div class="file-upload-common bg-[#F5F5F5] border-none p-2 ">
                                    <label for="file_input_cover" class="bg-[#CC527A] w-[123px] flex-none custom-file-upload  h-[26px] text-ellipsis-customer">
                                        <span>  @CRS.CLUB.APPLICATION.Resources.Resource.Choose_Banner_logo</span>
                                    </label>
                                    <input id="file_input_cover" name="coverPicture" type="file" style="display:none;">
                                    <p class="pl-2 text-ellipsis-customer" id="file_name_display_cover"></p>
                                </div>
                                <div class="text-xs text-error mt-[8px]">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.ImageNote
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="grid grid-cols-3 gap-6">
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.ClubNameEng
                            </label>
                            <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.ClubNameEng" value="@Model.ClubNameEng" name="ClubNameEng">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.ClubNameKatakana
                            </label>
                            <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.ClubNameKatakana" value="@Model.ClubNameJap" name="ClubNameJap">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Group_Name
                            </label>
                            <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.Group_Name" name="GroupName" value="@Model.GroupName">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Role
                            </label>
                            <input type="text" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Role" name="InputRole" value="@Model.InputRole">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Email_Address
                            </label>
                            <input type="text" class="w-full disabled_class" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Email_Address" disabled value="@Model.EmailAddress">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Phone_Number
                            </label>
                            <div class="number-input">
                                <div class="flag-section" style="background: lightgray;">
                                    <div class="japan-flag">
                                        <div></div>
                                    </div>
                                    <div>
                                        +81
                                    </div>
                                    <div class="line-y">
                                    </div>
                                </div>
                                <input type="text" class="w-full disabled_class" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Phone_Number" disabled value="@Model.PhoneNumber">
                            </div>
                        </div>
                    </div>
                    <div class="input-field-common w-[683px]">
                        <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                            @CRS.CLUB.APPLICATION.Resources.Resource.Bio
                        </label>
                        <textarea class="w-full " rows="4" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Bio" name="Bio">@Model.Bio</textarea>
                    </div>
                </div>
            </div>
            <div id="content2" class="content-section" style="display: none;">
                <div class="grid gap-6">
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Social_Links
                    </div>
                    <div class="grid grid-cols-3 gap-6">
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Website
                            </label>
                            <input type="text" class="w-full" placeholder="www.clubglobal.com" name="Website" value="@Model.Website">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Instagram
                            </label>
                            <input type="text" class="w-full" placeholder="www.tiktok.com/akiranagata" name="Instagram" value="@Model.Instagram">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Tiktok
                            </label>
                            <input type="text" class="w-full" placeholder="www.tiktok.com/akiranagata" name="Tiktok" value="@Model.Tiktok">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Line
                            </label>
                            <input type="text" class="w-full" placeholder="www.line.com/hos.na" name="Line" value="@Model.Line">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Twitter
                            </label>
                            <input type="text" class="w-full" placeholder="www.twitter.com/akiranagata" name="Twitter" value="@Model.Twitter">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Google_Maps
                            </label>
                            <input type="text" class="w-full" placeholder="www.googlemaps.com/" name="GoogleMaps" value="@Model.GoogleMaps">
                        </div>
                    </div>
                </div>
            </div>
            <div id="content3" class="content-section" style="display: none;">
                <div class="grid gap-6">
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.User_Info
                    </div>
                    <div class="grid grid-cols-4 gap-6">
                        @*<div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.FullName
                                </label>
                                <input type="text" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.FullName" value="@Model.FullName" disabled>
                            </div>*@
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.FirstName
                            </label>
                            <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.FirstName" name="FirstName" value="@Model.FirstName">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.LastName
                            </label>
                            <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.LastName" name="LastName" value="@Model.LastName">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Username
                            </label>
                            <input type="text" class="w-full disabled_class" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Username" value="@Model.UserName" disabled>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.EmailAddress))
                        {
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Email_Address
                                </label>
                                <input type="text" class="w-full disabled_class" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Email_Address" name="EmailAddress" value="@Model.EmailAddress" disabled>
                            </div>
                        }
                        else
                        {
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Email_Address
                                </label>
                                <input type="text" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Email_Address" name="EmailAddress" value="@Model.EmailAddress">
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div id="content4" class="content-section" style="display: none;">
                <div class="grid gap-6">
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Club_Info
                    </div>
                    <div class="grid gap-6">
                        <div class="grid grid-cols-3 gap-6">
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_From
                                </label>
                                @*<input type="time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_From" name="ClubOpeningTime" value="@Model.ClubOpeningTime">*@
                                <input type="text" id="working_hour_from" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_From" name="ClubOpeningTime" value="@Model.ClubOpeningTime" readonly>
                            </div>
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_To
                                </label>
                                @*<input type="time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_To" name="ClubClosingTime" value="@Model.ClubClosingTime">*@
                                <input type="text" id="working_hour_to" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Working_Hours_To" name="ClubClosingTime" value="@Model.ClubClosingTime" readonly>
                            </div>
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Holiday
                                </label>
                                <input type="text" class="w-full" placeholder=" @CRS.CLUB.APPLICATION.Resources.Resource.Holiday" name="Holiday" value="@Model.Holiday">
                            </div>
                        </div>
                        <div class="grid grid-cols-3 gap-6">
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Last_Order_Time
                                </label>
                                @*<input type="time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Last_Order_Time" name="LastOrderTime" value="@Model.LastOrderTime">*@
                                <input type="text" id="last_order_time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Last_Order_Time" name="LastOrderTime" value="@Model.LastOrderTime" readonly>
                            </div>
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Last_Entry_Time
                                </label>
                                @*<input type="time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Last_Entry_Time" name="LastEntrySyokai" value="@Model.LastEntrySyokai">*@
                                <input type="text" id="last_entry_time" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Last_Entry_Time" name="LastEntrySyokai" value="@Model.LastEntrySyokai" readonly>
                            </div>
                            <div class="input-field-common w-[272px]">
                                <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Tax
                                </label>
                                <input type="text" id="tax_id" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Tax" name="Tax" value="@Model.Tax" oninput="taxvalidate(this)">
                                <div class="text-[#7D7D7D] text-xs pt-2">
                                    @CRS.CLUB.APPLICATION.Resources.Resource.Total_service_tax_and_consumption_tax
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Plan
                    </div>
                    <div class="grid gap-3 text-[#062937] mb-[45px]">
                        <div class="flex">
                            <div class="w-[260px] text-sm font-medium text-secondary-100 block">@CRS.CLUB.APPLICATION.Resources.Resource.Regular_Price_1_hour</div>
                            <div class="input-field-common">
                                <input type="text" class="w-full" placeholder="Price 3,000円" name="RegularPrice" value="@Model.RegularPrice" oninput="amountvalidate(this)" />
                            </div>
                        </div>
                        <div class="flex">
                            <div class="w-[260px] text-sm font-medium text-secondary-100 block">@CRS.CLUB.APPLICATION.Resources.Resource.Nomination_fee</div>
                            <div class="input-field-common">
                                <input type="text" class="w-full" placeholder="Price 3,000円" name="NominationFee" value="@Model.NominationFee" oninput="amountvalidate(this)" />
                            </div>
                        </div>
                        <div class="flex">
                            <div class="w-[260px] text-sm font-medium text-secondary-100 block">@CRS.CLUB.APPLICATION.Resources.Resource.Accompanying_fee</div>
                            <div class="input-field-common">
                                <input type="text" class="w-full" placeholder="Price 3,000円" name="AccompanyingFee" value="@Model.AccompanyingFee" oninput="amountvalidate(this)" />
                            </div>
                        </div>
                        <div class="flex">
                            <div class="w-[260px] text-sm font-medium text-secondary-100 block ">@CRS.CLUB.APPLICATION.Resources.Resource.On_site_nomination</div>
                            <div class="input-field-common">
                                <input type="text" class="w-full" placeholder="Price 3,000円" name="OnSiteNominationFee" value="@Model.OnSiteNominationFee" oninput="amountvalidate(this)" />
                            </div>
                        </div>
                        <div class="flex">
                            <div class="w-[260px] text-sm font-medium text-secondary-100 block">@CRS.CLUB.APPLICATION.Resources.Resource.Various_drinks</div>
                            <div class="input-field-common">
                                <input type="text" class="w-full" placeholder="Price 3,000円" name="VariousDrinksFee" value="@Model.VariousDrinksFee" oninput="amountvalidate(this)" />
                            </div>
                        </div>
                    </div>
                    <div class="text-[#001118] text-sm font-semibold uppercase">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Address
                    </div>
                    <div class="grid grid-cols-3 gap-6">
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Zip
                            </label>
                            <input type="text" class="w-full" placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.ZipCode_placeholder" name="InputZip" value="@Model.InputZip" oninput="postalvalidate(this)">
                        </div>
                        <div class="input-field-common w-[272px] prefecture-class">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Prefecture
                            </label>
                            <div class="input-field-common">
                                <select id="" style="width: 100%;" class="default_select text-[#B7B7B7] h-[44px]" name="InputPrefectureId">
                                    @foreach (var item in ViewBag.PrefectureDDL as IEnumerable<SelectListItem>)
                                    {
                                        var selectedId = ViewBag.PrefectureKey as string;
                                        if (item.Value == selectedId)
                                        {
                                            <option value="@item.Value" selected>
                                                @item.Text
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">
                                                @item.Text
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="input-field-common w-[272px] city-class">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.City
                            </label>
                            <div class="input-field-common">
                                <select id="" style="width: 100%;" class="default_select text-[#B7B7B7] h-[44px]" name="InputCityId">
                                    @foreach (var item in ViewBag.LocationDDL as IEnumerable<SelectListItem>)
                                    {
                                        var selectedId = ViewBag.CityKey as string;
                                        if (item.Value == selectedId)
                                        {
                                            <option value="@item.Value" selected>
                                                @item.Text
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">
                                                @item.Text
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Street
                            </label>
                            <input type="text" class="w-full"
                                   placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Enter_street"
                                   name="InputStreet" value="@Model.InputStreet">
                        </div>
                        <div class="input-field-common w-[272px]">
                            <label class="block mb-4 text-sm font-medium text-secondary-100 ">
                                @CRS.CLUB.APPLICATION.Resources.Resource.Building_and_Room_No.
                            </label>
                            <input type="text" class="w-full"
                                   placeholder="@CRS.CLUB.APPLICATION.Resources.Resource.Enter_building___room_no_"
                                   name="InputHouseNo" value="@Model.InputHouseNo">
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex justify-between ">
                <div>
                    <button class="btn btn-primary-normal leading-[12px] rounded-[4px] px-3 text-sm"
                            id="previousBtn">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Previous
                    </button>
                </div>
                <div class="flex gap-6">
                    <button class="btn btn-primary-normal rounded-[4px] px-3 text-sm" type="button" onclick="window.location.href='@Url.Action("Dashboard","Home")'">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Cancel
                    </button>
                    <button class="btn btn-primary-default rounded-[4px] px-3 text-sm"
                            id="nextBtn">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Next
                    </button>
                    <button class="btn btn-primary-default rounded-[4px] px-3 text-sm" idata-modal-target="default-modal"
                            data-modal-toggle="default-modal" type="button" id="save-btn-id">
                        @CRS.CLUB.APPLICATION.Resources.Resource.Save_Changes
                    </button>
                </div>
            </div>
        </form>
    </div>
